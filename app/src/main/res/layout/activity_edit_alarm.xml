<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:clipToPadding="false">

        <!-- 标题 -->
        <TextView
            android:text="设置闹钟"
            android:textSize="32sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/digital7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <!-- 时间选择按钮 -->
        <Button
            android:id="@+id/selectTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择时间"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- 日期选择按钮 -->
        <Button
            android:id="@+id/selectDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"/>

        <!-- 重复周期标题 -->
        <TextView
            android:text="重复周期"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="@font/digital7"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <!-- 重复周期选项 -->
        <RadioGroup
            android:id="@+id/repeatGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/repeatNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不重复"
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/repeatDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天"
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/repeatWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每周"
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/repeatMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每月"
                android:textColor="@android:color/white"/>
        </RadioGroup>

        <!-- 开关标题 -->
        <TextView
            android:text="启用闹钟"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="@font/digital7"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <!-- 启用闹钟开关 -->
        <Switch
            android:id="@+id/alarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:thumbTint="@android:color/holo_green_light"
            app:trackTint="@android:color/darker_gray"/>

        <!-- 保存按钮 -->
        <Button
            android:id="@+id/saveAlarmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存闹钟"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/black"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>

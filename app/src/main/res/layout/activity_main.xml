<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 日期显示 -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYY/MM/DD"
            android:textSize="32sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginBottom="8dp" />

        <!-- 时间显示 -->
        <LinearLayout
            android:id="@+id/clockContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 小时 -->
            <TextSwitcher
                android:id="@+id/hourTens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextSwitcher
                android:id="@+id/hourUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="72sp"
                android:textColor="@android:color/holo_green_light" />
            <!-- 分钟 -->
            <TextSwitcher
                android:id="@+id/minTens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextSwitcher
                android:id="@+id/minUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="72sp"
                android:textColor="@android:color/holo_green_light" />
            <!-- 秒 -->
            <TextSwitcher
                android:id="@+id/secTens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextSwitcher
                android:id="@+id/secUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnAlarm"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_alarm"
                android:contentDescription="闹钟"
                app:tint="@android:color/holo_green_light" />

            <ImageButton
                android:id="@+id/btnClock"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_clock"
                android:contentDescription="时钟"
                app:tint="@android:color/holo_green_light" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
